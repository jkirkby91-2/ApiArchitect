{
    "name": "apiarchitect/apiarchitect",
    "description": "ApiArchitect boiler plate framework, raqpidly develop new apis on the lumen framework.",
    "keywords": ["framework", "laravel", "lumen", "api", "boilerplate", "apiarchitect"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "laravel/lumen-framework": "5.4.*",
        "vlucas/phpdotenv": "~2.2",
        "apiarchitect/compass": "~1.0",
        "apiarchitect/Auth": "~1.0",
        "apiarchitect/log": "~1.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "phpunit/phpunit": "~5.0",
        "mockery/mockery": "~0.9",
        "appzcoder/lumen-routes-list": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/",
            "database/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "generate-docker-ssl": [
          "openssl req -x509 -nodes -days 365 -newkey rsa:2048 -keyout /docker/data/ssl/nginx-selfsigned.key -out /docker/data/ssl/nginx-selfsigned.crt"
        ],
        "generate-docker-dhparams": [
          "openssl dhparam -out docker/data/ssl/dhparam.pem 2048"
        ],
	"init-submodules": [
	  "git submodule update --init --recursive"
	],
        "boot-docker-env": [
          "docker-compose -f docker/docker-compose.yml -f docker/docker-compose-dev.yml up -d --build"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
